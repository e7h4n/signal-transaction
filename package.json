    "happy-dom": "^15.7.4",
    "signal-timers": "^1.0.1",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.6.0",
    "vite": "^5.4.6",
    "vite-plugin-dts": "^4.2.1",
    "vitest": "^2.1.1"
  },
  "type": "module",
  "files": [
    "dist"
