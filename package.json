    "@vitest/coverage-v8": "^2.1.1",
    "eslint": "^9.10.0",
    "eslint-plugin-vitest": "^0.5.4",
    "happy-dom": "^15.7.4",
    "rollup": "^4.22.0",
    "rollup-plugin-dts": "^6.1.1",
    "signal-timers": "^1.0.1",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.6.0",
    "vitest": "^2.1.1"
