  "repository": {
    "type": "git",
    "url": "git+https://github.com/e7h4n/signal-transaction.git"
  },
  "license": "MIT",
  "keywords": [
    "AbortController",
    "AbortSignal",
    "cancelation",
    "async",
    "async flow"
  ],
  "scripts": {
